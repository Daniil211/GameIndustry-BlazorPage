@typeparam TItem

@if (ListOfItems == null)
{
    @if (NullList != null)
    {
        @NullList
    }
    else
    {
        <img src="https://art.pixilart.com/7badccc6206bf0f.gif" height="200" />
    }
}
else if (ListOfItems.Count == 0)
{
    @if (NullList != null)
    {
        @EmptyList
    }
    else
    {
        <img src="https://opengameart.org/sites/default/files/styles/medium/public/Battery%20Empty.gif" height="200" />
    }
}
else
{
    @foreach (var item in ListOfItems)
    {
        @ItemTemplate(item);
    }
}

@code {
    [Parameter] public RenderFragment NullList { get; set; }

    [Parameter] public RenderFragment EmptyList { get; set; }

    [Parameter] public RenderFragment<TItem> ItemTemplate { get; set; }

    [Parameter] public List<TItem> ListOfItems { get; set; }
}
